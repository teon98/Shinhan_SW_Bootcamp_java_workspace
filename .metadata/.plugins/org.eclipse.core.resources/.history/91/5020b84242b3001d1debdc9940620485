package com.shinhan.day03;

//JavaBeans기술 규격서: field는 private(정보은닉)
public class Computer {
	private String model;
	private String os;
	private int price;
	
	//생성자 Overloading: 생성자 이름은 같고 매개변수 사양이다르다.
	public Computer(){ //public을 붙여주면 다른 패키지에서 new로 Computer 객체를 만들 수 있다.
		System.out.println("default 생성자로 생성");
	}
	
	public Computer(String model) {
		System.out.println("arg가 1개인 생성자");
		this.model = model; 
	}
	
	public Computer(String os, int price) {
		System.out.println("arg가 2개인 생성자");
		this.os = os;
		this.price = price;
	}
	
	public Computer(String model, String os, int price) {
		System.out.println("arg가 3개인 생성자");
		this.model = model;
		this.os = os;
		this.price = price;
	}
	
	//일반메서드
	public void computerInfoPrint() {
		System.out.println("model:" + model);
		System.out.println("os:" + os);
		System.out.println("price:" + price);
	}
	
	public String getModel() {
		return model;
	}
	
	public String getOs() {
		return os;
	}
	
	public int getPrice() {
		return price;
	}
}
